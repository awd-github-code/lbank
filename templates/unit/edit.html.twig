{% extends 'base.html.twig' %}

{% block body %}    
    <section class="vh-100" style="background-color: gray;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">                         
                        <div class="card-body p-4 p-lg-5 text-black">
                            <div class=" align-items-center mb-4 mb-lg-5">                                    
                                <h2 class="fw-bold mb-2 text-uppercase">Unit</h2>                                    
                            </div>
                            {{ form_start(form) }}                                                               
                                {{ form_row(form.title) }}                                    
                                {{ form_row(form.ord) }} 
                                {{ form_row(form.uploadedSoundFile, {'attr': {'class': 'js-audio-change', 'accept': 'audio/*' }}) }}
                                                         
                                <div class="text-center mt-5">
                                    <button class="btn btn-secondary btn-lg px-5 " type="submit">OK</button>                                        
                                </div>                                                                                                                                                                           
                            {{ form_end(form) }}   

                                                                                          
                        </div>     
                                                                                                                         
                    </div>   
                </div>
            </div>    
        </div>
    </section> 
{% endblock %}